@using Demo.DataAccessLayer.Models
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>

<div>
    <a class="btn btn-primary mt-3" asp-action="Create">Create New Department</a>
</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>
                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <td><a asp-action="Details" class="btn btn-warning" asp-route-id="@department.Id"><i class="fas fa-eye"></i>Details</a></td>
                    <td><a asp-action="Edit" class="btn btn-success" asp-route-id="@department.Id"><i class="fas fa-edit"></i>Edit</a></td>
                    
                    <td><a asp-action="Delete">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="mt-5 alert-warning">
        <h2>No Departments</h2>
    </div>
}

