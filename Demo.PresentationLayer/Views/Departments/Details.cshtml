@using Demo.DataAccessLayer.Models
@model Department
@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name Department Details</h1>


    <div class="form-group">
        <label asp-for="Code"></label>
        <input readonly class="form-control" asp-for="Code" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation"></label>
        <input readonly class="form-control" asp-for="DateOfCreation" />
    </div>

    <div>
        <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model.Id">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>