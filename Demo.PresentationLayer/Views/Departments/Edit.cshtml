@using Demo.DataAccessLayer.Models
@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name Department</h1>


<form method="post" asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-success">Update</button>
        <a asp-action="Index" class="btn btn-danger">Cancel</a>
    </div>
</form>
