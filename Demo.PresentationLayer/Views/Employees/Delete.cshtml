
@using Demo.DataAccessLayer.Models
@model Employee
@{
    ViewData["Title"] = "Delelte";
}

<h1 class="alert-danger">Delete @Model.Name Employee ?? </h1>


<form method="post" asp-action="Delete">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input readonly class="form-control" asp-for="Age" />
    </div>
    
    <div class="form-group">
        <label asp-for="Address"></label>
        <input readonly class="form-control" asp-for="Address" />
    </div>

    <div>
        <a asp-action="ConfirmDelete" class="btn btn-danger" asp-route-id="@Model.Id">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>